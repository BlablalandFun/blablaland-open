{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "rootDir": "./",
    "outDir": "./dist/",
    "useDefineForClassFields": true,
    
    "incremental": true,
    "noEmit": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
